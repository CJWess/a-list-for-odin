<h1> <%= @game.title %></h1>
<img class="game-image" src="<%=@game.image%>">
<div>
<p>Playing time: <%= @game.playing_time %></p>
<p>Minimum player count: <%= @game.player_count_min %></p>
<p>Maximum player count: <%= @game.player_count_max %></p>
<% if logged_in? %>
    <%= button_to "Add game", {action: "create", controller: "ownerships", owner_id: current_user.id, game_id: @game.id, remote: true}, {class: 'btn btn-small'} %>
      <%= form_for GameRating.new, url: {action: "create", controller: "game_ratings", rater_id: current_user.id, game_id: @game.id} do |f| %>
        <%= f.label "Rating: " %>
        <%= f.select :value, [['5','5'],['4','4'],['3','3'],['2','2'],['1','1']] %>
        <%= f.submit %>
      <% end %>
    <%= button_to 'Remove game', { action: 'destroy', owner_id: current_user.id, game_id: @game.id, controller: "ownerships"}, method: :delete %>
<% end %>

</div>


