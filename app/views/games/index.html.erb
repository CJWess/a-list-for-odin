<div class="title">
  <h1 class="title-text">Welcome to A List For Odin</h1>
  <h3>The ultimate source for what your friends are playing</h3>
  <%= form_tag :_users, :method => 'get' do %>
    <p class="friend-search">
      <label>Find Friends by username: </label>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</div>
<div class="game-list-full">
<% @games.each do |each_game| %>
  <div class="each-game-display">
    <%= link_to each_game.title, each_game %>
    <p><img src="<%= each_game.thumbnail %>" alt="game-thumbnail" height='75' width='75'>

    <% if current_user && !current_user.owns_game?(each_game.id) %>
      <%= button_to "Add game", {action: "create", controller: "ownerships", owner_id: current_user.id, game_id: each_game.id, remote: true}, {class: 'add-btn btn-small'} %></p>
    <% end %>
    </div>
<% end %>
</div>
